{
  "name": "tiny-memo",
  "version": "0.1.0",
  "type": "module",
  "main": "dist-electron/main.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "npm run build:electron && cross-env NODE_ENV=development electron .",
    "build": "npm run build:electron && vite build && electron-builder",
    "build:electron": "node electron/build.js",
    "release": "npm run build:electron && vite build && electron-builder --publish=never",
    "release:dark": "npm run build:electron && vite build && electron-builder --publish=never --config.mac.icon=assets/icons/icon.icns --config.mac.identity=null",
    "release:light": "npm run build:electron && vite build && electron-builder --publish=never --config.mac.icon=assets/icons/icon-light.icns --config.mac.identity=null",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "keywords": [
    "memo",
    "electron",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "description": "A standalone memo app for Mac with 3-pane layout",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.8",
    "jsdom": "^26.0.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "highlight.js": "^11.11.1",
    "prism-react-renderer": "^2.4.1",
    "prisma": "^6.12.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2"
  },
  "build": {
    "appId": "com.tiny-memo.app",
    "productName": "tiny memo",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "prisma/**/*"
    ],
    "asarUnpack": [
      "node_modules/@prisma/**/*",
      "node_modules/.prisma/**/*"
    ],
    "extraResources": [
      {
        "from": "prisma",
        "to": "prisma"
      },
      {
        "from": "node_modules/.prisma",
        "to": "node_modules/.prisma"
      },
      {
        "from": "node_modules/@prisma",
        "to": "node_modules/@prisma"
      }
    ],
    "mac": {
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        }
      ],
      "mergeASARs": false,
      "x64ArchFiles": "Contents/Resources/node_modules/{.prisma,@prisma}/**/*"
    }
  }
}
